<div class="container">

<div class="row">
  <div class="col s12 l4 push-l8 xl4">
    <%= search_form_for @q do |f| %>
      <div class="input">
      <%= f.label :name_or_year_title_cont, "Search name or year" %>
      <%= f.text_field :name_or_year_cont %>
      </div>
      <div class="actions">
        <a class="waves-effect waves-light btn"><%= f.submit "Search" %></a>
      </div>
    <% end %>
    </div>
</div>



   <div class="row">
      <% @legopins.each do |lego| %>
        <div class="col s12 l3 xl3">
                <div class="card small">
                  <div class="card-content">
                    <span class="card-title"><%= link_to "#{lego.name}", legopin_path(lego) %></span>
                  </div>
                    <div class="card-image">

                        <%= link_to image_tag(lego.image.url(:medium)), legopin_path(lego) %>
                    </div>
                </div>
        </div>
    <% end %>
  </div>

</div>
