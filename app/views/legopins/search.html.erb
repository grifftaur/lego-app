<div class="row">
   <% @legopins.each do |lego| %>
     <div class="col s12 l3 xl3">
             <div class="card small">
               <div class="card-content">
                 <span class="card-title"><%= link_to "#{lego.name}", legopin_path(lego) %></span>
               </div>
                 <div class="card-image">
                     <%= link_to image_tag(lego.image.url(:medium)), legopin_path(lego) %>
                 </div>
             </div>
     </div>
   <% end %>
</div>
