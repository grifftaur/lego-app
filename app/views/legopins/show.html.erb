<div class="container">
   <div class="row">
     <div class="col s12 m6 l4 xl4">
      <h4>Name</h2>
        <%= @legopins.name %><br />
      </div>
      <div class="col s12 m6 l4 xl4">
      <h4>Set Number</h2>
        <%= @legopins.setnumber %><br />
      </div>

  </div>
  <div class="row">
       <div class="col s12 m6 l4 xl4">
          <h4>Year</h2>
            <%= @legopins.year %><br />
      </div>
      <div class="col s12 m6 l4 xl4">
          <h4>Instructions</h4>
            <%= link_to @legopins.url %>
      </div>
  </div>

      <div class="row">
          <div class="col s12 m6 l4 xl4">
            <h4>Average Build Time</h2>
              <% if @avg_buildtime.blank? %>
               <h6>No build times have been submitted</h6>
              <% else %>
              <%= distance_of_time(@avg_buildtime, only: [:hours, :minutes]) %>
              <% end %>
          </div>
          <div class="col s12 m6 l4 xl4">
                <h4>Submit Build Time</h4>
                <% if user_signed_in? %>
                  <%= link_to "Submit Build Time", new_legopin_buildtime_path(@legopins)  %>
                <% end %>
          </div>
        </div>


      <div class="row">
        <div class="col s12 m6 l4 xl4">
           <%= image_tag(@legopins.image.url(:medium)) %>
        </div>
      </div>

  <div class="row">
    <div class="col s12 m6 l4 xl4">
    <%#= <a href="/legopins/<%= @legopins.id/edit">Edit</a> %>
    <% if user_signed_in? && current_user.admin? %>
    <%= link_to 'Edit', edit_legopin_path(@legopins) %>
    <%= link_to 'Delete', @legopins, :method => 'delete', data: {confirm: "Are you sure you want to delete #{@legopins.name}?"} %>
    <% end %>
    </div>
  </div>

</div>
